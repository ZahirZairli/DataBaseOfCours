
@{
    ViewBag.Title = "Istifadeciler";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="row">
    <div style="overflow: hidden;" class="card">
        <div class="header">
            <h4 class="title">Bütün istifadəçilərin siyahısı:</h4>
        </div>
        <div style="margin-top: 10px;" class="input-group input-group-lg">
            <input onkeyup="myFunction()" id="myInput" type="text" class="form-control" placeholder="Axtar..">
        </div>
        <br />
        <div class="content table-responsive table-full-width">
            <div style="overflow-x: auto;">
                <table id="mytable" style="cursor: pointer;" class="table table-hover table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>İstifadəçi tam Ad</th>
                            <th>İstifadəçi Telefon no</th>
                            <th>Filial</th>
                            <th>İstifadəçi Mail</th>
                            <th>İstifadəçi Tip</th>
                            <th colspan="2" class="text-center">Düzəliş et</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.istifadeci)
                        {
                        <tr>
                            <td>@(ViewBag.istifadeci.IndexOf(item)+1)</td>
                            <td>@item.IstifadeciTamAd</td>
                            <td>@item.IstifadeciTelefon</td>
                            <td>@item.FilialAd</td>
                            <td>@item.IstifadeciMail</td>
                            <td>@item.TipAd</td>
                            <td class="text-center"><a href="~/Home/editistifadeci/@item.IstifadeciId"><i class="fas fa-edit"></i></a></td>
                            <td class="text-center"><a href="~/Home/silistifadeci/@item.IstifadeciId"><i style="font-size: 25px;" class="pe-7s-close"></i></a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <hr />
        <div class="header">
            <h4>Siyahıya yeni istifadəçi əlavə et:</h4>
        </div>
        <div class="content">
            <form method="post" action="~/Home/yeniistifadeci">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tam Ad(ad,soyad):</font></font></label>
                            <input type="text" class="form-control" placeholder="ad,soyad" name="IstifadeciTamAd">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Istifadəçi telefon nömrəsi</font></font></label>
                            <input type="text" class="form-control" placeholder="telefon*" name="IstifadeciTelefon">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Istifadeci Mail:</font></font></label>
                            <input type="text" class="form-control" name="IstifadeciMail" placeholder="mail">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Istifadeci parol:</font></font></label>
                            <input type="text" class="form-control" name="IstifadeciParol1" placeholder="parol">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Filial:</font></font></label>
                            <select name="IstifadeciFilialId" class="form-control" style="cursor: pointer;">
                                @foreach (var item in ViewBag.filial)
                                {
                                    <option value="@item.FilialId">@item.FilialAd</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Filial:</font></font></label>
                            <select name="IstifadeciTipId" class="form-control" style="cursor: pointer;">
                                @foreach (var item in ViewBag.tip)
                                {
                                    <option value="@item.TipId ">@item.TipAd </option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-fill pull-right"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Əlavə et</font></font></button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>
