
@{
    ViewBag.Title = "editarenda";
    Layout = "~/Views/Shared/Admin.cshtml";
}
@using KursLa.Models
<div class="container-fluid">
    <div class="content">
        <div class="col-md-12">
            <div class="header">
                <h4>Kirayəyə düzəliş et:</h4>
            </div>
            <hr />
            <form method="post" action="~/Home/uparenda/@Model.ArendaId">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Miqdar:</font></font></label>
                            <input type="text" class="form-control" placeholder="Kiraəyənin miqdarı" name="ArendaMiqdari" value="@Model.ArendaMiqdari">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Arenda günü:</font></font></label>
                            <input type="text" class="form-control" name="ArendaGunu" value="@Model.ArendaGunu">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Filial:</font></font></label>
                            <select name="ArendaFilialId" class="form-control" style="cursor: pointer;">
                                @foreach (var item in ViewBag.filial)
                                {
                                    <option @(item.FilialId == Model.ArendaFilialId? "selected" : "") value="@item.FilialId">@item.FilialAd</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-fill pull-right"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Yadda saxla</font></font></button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>



