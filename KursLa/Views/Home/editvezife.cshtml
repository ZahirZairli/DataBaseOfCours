
@{
    ViewBag.Title = "editvezife";
    Layout = "~/Views/Shared/Admin.cshtml";
}
@using KursLa.Models
<div class="container-fluid">
    <div class="content">
        <form method="post" action="~/Home/upvezife/@Model.VezifeId">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Vəzifənin yeni adı:</font></font></label>
                        <input type="text" class="form-control" placeholder="vəzifə ad" name="VezifeAd" value="@Model.VezifeAd">
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-fill pull-right"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Yadda saxla</font></font></button>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
</div>

