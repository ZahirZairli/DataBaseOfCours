
@{
    ViewBag.Title = "jobfilial";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<div class="container-fluid">
    <div class="content">
        <div style="border-right: 4px solid #1DC7EA;border-left: 4px solid #1DC7EA;padding: 18px;" class="col-md-6">
            <div class="header">
                <h4>Siyahıya yeni filial əlavə et:</h4>
            </div>
            <hr />
            <form method="post" action="~/Home/yenifilial">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Yeni Filialın adı:</font></font></label>
                            <input type="text" class="form-control" placeholder="Yeni filialın adı" name="FilialAd">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-fill pull-right"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Əlavə et</font></font></button>
                <div class="clearfix"></div>
            </form>
        </div>
        <div style="border-right: 4px solid #1DC7EA;padding: 18px;" class="col-md-6">
            <div class="header">
                <h4>Siyahıya yeni vəzifə əlavə et:</h4>
            </div>
            <hr />
            <form method="post" action="~/Home/yenivezife">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Yeni vəzifənin adı:</font></font></label>
                            <input type="text" class="form-control" placeholder="vəzifə ad" name="VezifeAd">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-fill pull-right"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Əlavə et</font></font></button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
    <div class="col-md-5" style="margin-top: 70px; float:right;">
        <div class="header">
            <h4 class="title">Bütün vəzifələrin siyahısı:</h4>
        </div>
        <div class="input-group input-group-lg" style="margin-top: 10px;float: right;">
            <input onkeyup="myFunction1()" id="myInput1" type="text" class="form-control" placeholder="Axtar..">
        </div>
        <div class="content table-responsive table-full-width">
            <table id="mytable1" style="cursor: pointer;" class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Vəzifə Ad</th>
                        <th colspan="2" class="text-center">Düzəliş et</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.vezife)
                    {
                        <tr>
                            <td>@(ViewBag.vezife.IndexOf(item)+1)</td>
                            <td>@item.VezifeAd</td>
                            <td class="text-center"><a href="~/Home/editvezife/@item.VezifeId"><i class="fas fa-edit"></i></a></td>
                            <td class="text-center"><a href="~/Home/silvezife/@item.VezifeId"><i style="font-size: 25px;" class="pe-7s-close"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-5" style="margin-top: 70px;">
        <div class="header">
            <h4 class="title">Bütün filialların siyahısı:</h4>
        </div>
        <div class="input-group input-group-lg" style="margin-top: 10px;float: right;">
            <input onkeyup="myFunction2()" id="myInput2" type="text" class="form-control" placeholder="Axtar..">
        </div>
        <div class="content table-responsive table-full-width">
            <table id="mytable2" style="cursor: pointer;" class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Filial Ad</th>
                        <th colspan="2" class="text-center">Düzəliş et</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.filial)
                    {
                        <tr>
                            <td>@(ViewBag.filial.IndexOf(item)+1)</td>
                            <td>@item.FilialAd</td>
                            <td class="text-center"><a href="~/Home/editfilial/@item.FilialId"><i class="fas fa-edit"></i></a></td>
                            <td class="text-center"><a href="~/Home/silfilial/@item.FilialId"><i style="font-size: 25px;" class="pe-7s-close"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

